<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.wangjing.filepickerdemo">

    <application
        android:name="com.github.wangjing.filepickerdemo.FilePickerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.github.wangjing.filepickerdemo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.wangjing.filepickerdemo.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.github.wangjing.filepickerdemo.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.wangjing.filepickerdemo.MainActivity" />
        </activity>
    </application>

</manifest>